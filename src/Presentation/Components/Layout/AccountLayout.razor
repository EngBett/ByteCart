@inherits LayoutComponentBase
@inject IHttpContextAccessor HttpContextAccessor
@inject IMediator Mediator
@inject IJSRuntime Js
<div class="min-h-full">
    
    @*Menu/ Sidebar*@
    <SideBarComponent MenuVisible="MenuVisible" MenuStateChanged="MenuStateChangedHandler"/>

    <div class="lg:pl-64 flex flex-col flex-1 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
        <LayoutHeader MenuVisible="MenuVisible" MenuStateChanged="MenuStateChangedHandler"  Js="Js"/>
        <main class="flex-1 p-8 bg-slate-100 dark:bg-gray-800 min-h-screen">
            @Body
        </main>
    </div>
</div>