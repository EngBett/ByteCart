<div class="@(MenuVisible ? "" : "hidden") fixed inset-0 flex z-40 lg:hidden" role="dialog" aria-modal="true">
    
    <div class="fixed inset-0 bg-gray-600 bg-opacity-75" aria-hidden="true"></div>
    
    <div class="relative flex-1 flex flex-col max-w-xs w-full pt-5 pb-4 bg-cyan-700">
        
        <div class="absolute top-0 right-0 -mr-12 pt-2">
            <button type="button"
                    class="ml-1 cursor-pointer flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                    @onclick="OnCloseMenuAsync">
                <span class="sr-only">Close sidebar</span>

                <iconify-icon
                    icon="solar:close-circle-line-duotone"
                    class="text-3xl font-bold text-white">
                </iconify-icon>
            </button>
        </div>

        <div class="flex-shrink-0 flex items-center px-4">
            <span class="text-white font-bold">BYTE</span><span class="text-white font-medium">Cart</span>
        </div>
        <nav class="mt-5 flex-shrink-0 h-full divide-y divide-cyan-800 overflow-y-auto" aria-label="Sidebar">
            <SideBarItems/>
        </nav>
    </div>

    <div class="flex-shrink-0 w-14" aria-hidden="true">
        <!-- Dummy element to force sidebar to shrink to fit close icon -->
    </div>
</div>

<!-- Static sidebar for desktop -->
<div class="hidden lg:flex lg:w-64 lg:flex-col lg:fixed lg:inset-y-0">
    <div class="flex flex-col flex-grow bg-cyan-700 pt-5 pb-4 overflow-y-auto">
        <div class="flex items-center flex-shrink-0 px-4">
            <span class="text-white font-bold">BYTE</span><span class="text-white">Cart</span>
        </div>
        <nav class="mt-5 flex-1 flex flex-col divide-y divide-cyan-800 overflow-y-auto" aria-label="Sidebar">
            <SideBarItems/>
        </nav>
    </div>
</div>