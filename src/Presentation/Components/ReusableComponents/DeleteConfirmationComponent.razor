@if (ShowModal)
{
    <div class="fixed inset-0 z-50 bg-black/50 flex items-center justify-center">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg w-full max-w-md shadow-lg">
            <h2 class="text-lg font-semibold mb-4">Delete Supplier</h2>
            <p class="text-sm text-gray-700 dark:text-gray-400">Are you sure you want to delete
                <strong>@ModalTitle</strong>? This action cannot be undone.</p>
            <div class="mt-6 flex justify-end gap-2">
                <button type="button"
                        class="cursor-pointer text-sm text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-white mr-4"
                        @onclick="CloseModal">Cancel
                </button>
                <button type="button"
                        class="cursor-pointer inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-700 dark:hover:bg-red-800 dark:focus:ring-red-900"
                        @onclick="ConfirmDelete">Delete
                </button>
            </div>
        </div>
    </div>
}