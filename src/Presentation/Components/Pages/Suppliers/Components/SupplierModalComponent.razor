@if (ShowModal)
{
    <div class="fixed inset-0 z-50 bg-black/50 flex items-center justify-center">
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg w-full max-w-md shadow-lg">
            <h2 class="text-lg font-semibold mb-4">@ModalTitle</h2>
            <EditForm Model="@SupplierModel" OnValidSubmit="@SaveSupplier">
                <DataAnnotationsValidator/>
                <div class="space-y-4">
                    <div>
                        <label for="name"
                               class="block text-sm font-medium text-gray-900 dark:text-white">Name</label>
                        <InputText id="name" @bind-Value="SupplierModel.Name" placeholder="Supplier name"
                                   class="block w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white"/>
                        <ValidationMessage For="@(() => SupplierModel.Name)" class="text-xs text-red-500 mt-1"/>
                    </div>
                    <div>
                        <label for="contactEmail" class="block text-sm font-medium text-gray-900 dark:text-white">Contact
                            Email</label>
                        <InputText id="contactEmail" @bind-Value="SupplierModel.ContactEmail"
                                   placeholder="example@domain.com"
                                   class="block w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white"/>
                        <ValidationMessage For="@(() => SupplierModel.ContactEmail)"
                                           class="text-xs text-red-500 mt-1"/>
                    </div>
                    <div>
                        <label for="contactNumber" class="block text-sm font-medium text-gray-900 dark:text-white">Contact
                            Number</label>
                        <InputText id="contactNumber" @bind-Value="SupplierModel.ContactNumber"
                                   placeholder="+254..."
                                   class="block w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white"/>
                        <ValidationMessage For="@(() => SupplierModel.ContactNumber)"
                                           class="text-xs text-red-500 mt-1"/>
                    </div>
                    <div>
                        <label for="website"
                               class="block text-sm font-medium text-gray-900 dark:text-white">Website</label>
                        <InputText id="website" @bind-Value="SupplierModel.Website" placeholder="https://"
                                   class="block w-full p-2 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white"/>
                        <ValidationMessage For="@(() => SupplierModel.Website)"
                                           class="text-xs text-red-500 mt-1"/>
                    </div>
                </div>
                <div class="mt-6 flex justify-end gap-2">
                    <button type="button"
                            class="cursor-pointer text-sm text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-white mr-4"
                            @onclick="CloseModal">Cancel
                    </button>
                    <button type="submit"
                            class="cursor-pointer inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-700 dark:hover:bg-blue-800 dark:focus:ring-blue-900">
                        Save
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}