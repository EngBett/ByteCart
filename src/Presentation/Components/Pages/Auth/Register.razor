@page "/register"
@layout AuthLayout
@inject IIdentityService IdentityService
@inject NavigationManager NavManager

<div
    class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-base leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-gray-200">
            Sign up for an account
        </h1>
        <EditForm Model="_model" OnValidSubmit="RegisterAsync" class="space-y-4 md:space-y-6">
            @if (!string.IsNullOrWhiteSpace(alertMessage))
            {
                <AlertsComponent AlertType="@alertType" AlertMessage="@alertMessage"/>
            }
            <DataAnnotationsValidator/>
            <div>
                <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-200">Your
                    email</label>
                <InputText @bind-Value="_model.Email" id="email"
                           class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-cyan-600 focus:border-cyan-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-200 dark:focus:ring-blue-500 dark:focus:border-blue-500"
                           placeholder="name@company.com"/>
                <ValidationMessage For="@(() => _model.Email)" class="text-xs text-red-500 mt-1"/>
            </div>
            <div>
                <label for="password"
                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-200">
                    Password
                </label>

                <InputText @bind-Value="_model.Password" type="password" name="password" id="password"
                           placeholder="••••••••"
                           class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-cyan-600 focus:border-cyan-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-200 dark:focus:ring-blue-500 dark:focus:border-blue-500"/>
                <ValidationMessage For="@(() => _model.Password)" class="text-xs text-red-500 mt-1"/>
            </div>
            <div>
                <label for="confirm-password"
                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-200">
                    Password
                </label>

                <InputText @bind-Value="_model.ConfirmPassword" type="password" id="confirm-password"
                           placeholder="••••••••"
                           class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-cyan-600 focus:border-cyan-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-200 dark:focus:ring-blue-500 dark:focus:border-blue-500"/>
                <ValidationMessage For="@(() => _model.ConfirmPassword)" class="text-xs text-red-500 mt-1"/>
            </div>

            <button type="submit"
                    class="cursor-pointer w-full text-white bg-cyan-600 hover:bg-cyan-700 focus:ring-4 focus:outline-none focus:ring-cyan-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-cyan-600 dark:hover:bg-cyan-700 dark:focus:ring-cyan-800">
                Sign Up
            </button>

            <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                Already have an account? <a href="/login"
                                            class="font-medium text-blue-600 hover:underline dark:text-blue-500">Sign
                    in</a>
            </p>
        </EditForm>
    </div>
</div>